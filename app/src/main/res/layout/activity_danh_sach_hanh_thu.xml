<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".HanhThu.ActivityDanhSachHanhThu">

    <android.support.constraint.ConstraintLayout
        android:id="@+id/layoutAutoHide"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:id="@+id/layoutNhanVien"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:visibility="gone">

            <TextView
                android:id="@+id/textView24"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Nhân Viên:"
                android:textSize="14sp"
                tools:layout_editor_absoluteX="145dp"
                tools:layout_editor_absoluteY="48dp" />

            <Spinner
                android:id="@+id/spnNhanVien"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                app:layout_constraintEnd_toEndOf="parent"
                tools:layout_editor_absoluteY="8dp" />
        </LinearLayout>

        <Spinner
            android:id="@+id/spnSort"
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:layout_marginTop="8dp"
            android:entries="@array/sort_array"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/spnFilter" />

        <TextView
            android:id="@+id/textView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="8dp"
            android:layout_marginRight="8dp"
            android:text="Lọc"
            android:textSize="14sp"
            app:layout_constraintEnd_toStartOf="@+id/spnFilter"
            app:layout_constraintTop_toTopOf="@+id/spnFilter" />

        <TextView
            android:id="@+id/textView23"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="8dp"
            android:layout_marginRight="8dp"
            android:text="Sắp Xếp"
            android:textSize="14sp"
            app:layout_constraintEnd_toStartOf="@+id/spnSort"
            app:layout_constraintTop_toTopOf="@+id/spnSort" />

        <TextView
            android:id="@+id/textView4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="8dp"
            android:layout_marginRight="8dp"
            android:text="Đến Đợt"
            android:textSize="14sp"
            app:layout_constraintEnd_toStartOf="@+id/spnToDot"
            app:layout_constraintTop_toTopOf="@+id/spnToDot" />

        <Spinner
            android:id="@+id/spnKy"
            android:layout_width="150dp"
            android:layout_height="30dp"
            android:layout_marginTop="8dp"
            android:entries="@array/ky_array"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/spnNam" />

        <Spinner
            android:id="@+id/spnFilter"
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:layout_marginTop="8dp"
            android:entries="@array/filter_hanhthu_array"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/spnToDot" />

        <TextView
            android:id="@+id/textView26"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="8dp"
            android:layout_marginRight="8dp"
            android:text="Năm"
            android:textSize="14sp"
            app:layout_constraintEnd_toStartOf="@+id/spnNam"
            app:layout_constraintTop_toTopOf="@+id/spnNam" />

        <Spinner
            android:id="@+id/spnNam"
            android:layout_width="150dp"
            android:layout_height="30dp"
            android:entries="@array/nam_array"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/layoutNhanVien" />

        <Spinner
            android:id="@+id/spnFromDot"
            android:layout_width="150dp"
            android:layout_height="30dp"
            android:layout_marginTop="8dp"
            android:entries="@array/dot_array"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/spnKy" />

        <TextView
            android:id="@+id/textView25"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="8dp"
            android:layout_marginRight="8dp"
            android:text="Kỳ"
            android:textSize="14sp"
            app:layout_constraintEnd_toStartOf="@+id/spnKy"
            app:layout_constraintTop_toTopOf="@+id/spnKy" />

        <Spinner
            android:id="@+id/spnToDot"
            android:layout_width="150dp"
            android:layout_height="30dp"
            android:layout_marginTop="8dp"
            android:entries="@array/dot_array"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/spnFromDot" />

        <Button
            android:id="@+id/btnShowMess"
            style="@style/ButtonThuTien"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Tin Nhắn"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/btnDownload" />

        <TextView
            android:id="@+id/textView3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="8dp"
            android:layout_marginRight="8dp"
            android:text="Từ Đợt"
            android:textSize="14sp"
            app:layout_constraintEnd_toStartOf="@+id/spnFromDot"
            app:layout_constraintTop_toTopOf="@+id/spnFromDot" />

        <Button
            android:id="@+id/btnDownload"
            style="@style/ButtonThuTien"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:text="Tải Về"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/layoutNhanVien" />
    </android.support.constraint.ConstraintLayout>

    <ListView
        android:id="@+id/lstView"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintBottom_toTopOf="@+id/txtTongCong"
        app:layout_constraintTop_toBottomOf="@+id/layoutAutoHide" />

    <TextView
        android:id="@+id/txtTongHD"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="8dp"
        android:layout_marginStart="8dp"
        android:text="TextView"
        android:textColor="@color/colorSoTien"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/txtTongCong"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="8dp"
        android:layout_marginRight="8dp"
        android:text="TextView"
        android:textColor="@color/colorSoTien"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@+id/txtTongHD" />


</android.support.constraint.ConstraintLayout>